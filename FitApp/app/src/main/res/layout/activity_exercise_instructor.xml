<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ExerciseSelection"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/ic_arrow_back_black_24dp"
        app:title="Exercise instructor"
        app:titleMarginStart="30dp"
        app:titleTextColor="@color/black" />

    <TextView
        android:id="@+id/tvRemainingTime"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="148dp"
        android:text="Remaining time"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvCountdownTimer"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRemainingTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="111dp"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnStartTimer"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="26dp"
        android:layout_toStartOf="@+id/btnFinish"
        android:background="#2CAE32"
        android:text="Start"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnResume"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="26dp"
        android:layout_toStartOf="@+id/btnFinish"
        android:background="#2CAE32"
        android:text="RESUME"
        android:textColor="#FFF"
        tools:visibility="gone" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="26dp"
        android:background="#B71C1C"
        android:text="Finish"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btnPause"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="214dp"
        android:layout_marginBottom="26dp"
        android:background="#B71C1C"
        android:text="PAUSE"
        android:textColor="#FFF"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/ivRest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivUpNext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="11dp"
        android:text="REST"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ivUpNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCountdownTimer"
        android:layout_alignParentStart="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="39dp"
        android:text="Up next:" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCountdownTimer"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="67dp"
        android:text="Calories burned (kcal)" />

    <TextView
        android:id="@+id/ivCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="121dp"
        android:text="0"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/ivIkona"
        android:layout_width="194dp"
        android:layout_height="190dp"
        android:layout_above="@+id/btnStartTimer"
        android:layout_below="@+id/ivRest"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="51dp"
        app:srcCompat="@drawable/ic_exercising_man" />

    <Button
        android:id="@+id/btnT2sUpute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnFinish"
        android:layout_below="@+id/ivCalories"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="231dp"
        android:background="@drawable/button_bg"
        android:text="Upute" />


</RelativeLayout>