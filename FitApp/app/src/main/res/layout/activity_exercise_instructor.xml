<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ExerciseSelection"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/ic_arrow_back_black_24dp"
        app:title="Exercise instructor"
        app:titleMarginStart="30dp"
        app:titleTextColor="@color/black" />

    <LinearLayout
        android:id="@+id/glavni"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/prvi"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRemainingTime"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="148dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="148dp"
                android:text="Remaining time"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvCountdownTimer"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="111dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="111dp"
                android:text="00:00:00"
                android:textAlignment="center"
                android:textSize="40sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_below="@id/prvi"
            android:orientation="horizontal"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/drugi_0"
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ivUpNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Up next:" />

                <TextView
                    android:id="@+id/ivRest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REST"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/drugi_1"
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories burned (kcal)" />

                <TextView
                    android:id="@+id/ivCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/btnT2sUpute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:text="Upute" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivIkona"
                android:layout_width="194dp"
                android:layout_height="190dp"
                android:layout_marginStart="109dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="108dp"
                android:layout_marginBottom="51dp"
                app:srcCompat="@drawable/ic_exercising_man" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:gravity="center">
                <Button
                    android:id="@+id/btnStartTimer"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Start"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:background="@drawable/btn4_background" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-168dp"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btnPause"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Pause"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:background="@drawable/btn6_background" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="-168dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnResume"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn4_background"
                    android:text="Resume"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/btnFinish"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Finish"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:background="@drawable/btn6_background" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>