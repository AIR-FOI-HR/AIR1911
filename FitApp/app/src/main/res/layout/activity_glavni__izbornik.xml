<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#E9E9E9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/ic_person_black_24dp"
        app:title="FitApp"
        app:titleMarginStart="30dp"
        app:titleTextColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E9E9E9"
        android:layout_below="@id/toolbar"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="14dp">


                <LinearLayout
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fire" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="3dp"
                            android:text="Calorie overview"
                            android:textColor="#9B9B9B"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="324dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/remaining_calorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="1192"
                            android:textColor="#000000"
                            android:textSize="44dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="/"
                            android:textColor="#9B9B9B"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/calorie_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="1896"
                            android:textColor="#9B9B9B"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text=" - "
                            android:textColor="#F44336"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/food_calorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="1036"
                            android:textColor="#F44336"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text=" + "
                            android:textColor="#4CAF50"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/exercise_calorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="332"
                            android:textColor="#4CAF50"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text=" kcal"
                            android:textColor="#9B9B9B"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:layout_width="29dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/exercises" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="3dp"
                            android:text="Exercise"
                            android:textColor="#9B9B9B"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="324dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp">

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/actual_exercise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="332"
                                android:textColor="#4CAF50"
                                android:textSize="44dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="/"
                                android:textColor="#9B9B9B"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/recommended_exercise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="500"
                                android:textColor="#9B9B9B"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text=" kcal"
                                android:textColor="#9B9B9B"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:layout_marginRight="25dp"
                            >


                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="43dp"
                                android:background="@drawable/layout_bg"
                                android:orientation="horizontal"
                                android:layout_gravity="center">

                                <ImageButton

                                    android:id="@+id/rezim"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="8dp"
                                    android:background="@drawable/button_bg"
                                    android:padding="7dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_history"
                                    android:textAllCaps="false" />

                                <ImageButton

                                    android:layout_width="20dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/vertical_line"
                                    android:background="@drawable/button_bg"
                                    android:scaleType="fitCenter" />

                                <ImageButton
                                    android:id="@+id/btnExcerciseSelection"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:textAllCaps="false"
                                    android:src="@drawable/dots"
                                    android:background="@drawable/button_bg"
                                    android:scaleType="fitCenter"
                                    android:padding="10dp" />

                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="14dp">


                <LinearLayout
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/meals" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="3dp"
                            android:text="Food"
                            android:textColor="#9B9B9B"
                            android:textSize="18dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="324dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp">

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/actual_food"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="1036"
                                android:textColor="#F44336"
                                android:textSize="44dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="/"
                                android:textColor="#9B9B9B"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/recommended_food"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="2396"
                                android:textColor="#9B9B9B"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text=" kcal"
                                android:textColor="#9B9B9B"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:layout_marginRight="25dp"
                            >

                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="43dp"

                                android:layout_marginTop="10dp">

                                <Button
                                    android:id="@+id/btnFoodDiary"
                                    android:layout_width="match_parent"
                                    android:layout_height="43dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/btn2_background"
                                    android:text="Add"
                                    android:textAllCaps="false" />

                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            app:cardCornerRadius="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="233dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/weight" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_marginTop="3dp"
                                android:text="Weight"
                                android:textColor="#9B9B9B"
                                android:textSize="18dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="324dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20dp">
                            <LinearLayout
                                android:layout_width="170dp"
                                android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text=" 82,1"
                                android:textColor="#000000"
                                android:textSize="44dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text=" kg"
                                android:textColor="#9B9B9B"
                                android:textSize="15dp" />
                            </LinearLayout>
                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:layout_marginRight="10dp"
                                >

                                <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="43dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <!--<Button
                                        android:layout_width="match_parent"
                                        android:layout_height="43dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/btn2_background"
                                        android:text="Measure"
                                        android:textAllCaps="false" />
                                     -->

                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
